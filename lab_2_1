print("Вводим координаты точки A на плоскости:")
x1 = int(input())
y1 = int(input())
print("Вводим координаты точки B на плоскости:")
x2 = int(input())
y2 = int(input())
print("Вводим координаты точки C на плоскoсти:")
x3 = int(input())
y3 = int(input())
print("Найдём определитель второго порядка:")
f = ((x1 - x3) * (y2 - y3)) - ((x2 - x3) * (y1 - y3))
print(f)
if f < 0:
    f=f * -1
S = f / 2
print("Площадь треугольника =", S)
